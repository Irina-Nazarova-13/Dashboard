<Window x:Class="Dashboard.DashboardOne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dashboard"
        mc:Ignorable="d"
        FontSize="18"
        WindowStartupLocation="CenterScreen"
       Icon="Images/database.ico"
        Title="Dashboard 1" 
        Height="600" Width="600"
        MinHeight="600" MinWidth="650"
        FontFamily="Fonts/#Caviar Dreams">
    <Grid>
        <Border Grid.ColumnSpan="2" Grid.RowSpan="3">
            <Border.Background>
                <LinearGradientBrush  StartPoint="0,0" EndPoint="0, 1" >
                    <GradientStop Color="#8BFFC8" Offset="0"/>
                    <GradientStop Color="#FFB4B4" Offset="0.99"/>
                    <GradientStop Color="white" Offset="0.4"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border BorderBrush="#D2DEF7" BorderThickness="1" 
                    RenderTransformOrigin="0.48,0.488"/>
        </Border>

    </Grid>
</Window>
